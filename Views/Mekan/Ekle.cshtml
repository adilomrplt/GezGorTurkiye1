@model GezGorTurkiye.Entities.Mekan


@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">
        @ViewBag.Hata
    </div>
}


<h2>Mekan Ekle</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label>Ad</label>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        <input type="text" asp-for="Kategori" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Konum (Koordinat veya adres)</label>
        <input type="text" asp-for="Konum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şehir</label>
        <select asp-for="SehirId" asp-items="ViewBag.Sehirler" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
