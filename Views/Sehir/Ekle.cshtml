@model GezGorTurkiye.Entities.Sehir

<h2>Şehir Ekle</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label>Şehir Adı</label>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bölge</label>
        <input type="text" asp-for="Bolge" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
