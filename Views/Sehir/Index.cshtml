@model IEnumerable<GezGorTurkiye.Entities.Sehir>

@{
    ViewBag.Title = "Şehir Listesi";
}

<div class="container mt-4">
    <h2 class="text-light mb-4"><i class="fas fa-city"></i> Şehir Listesi</h2>

    <a href="/Sehir/Ekle" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Yeni Şehir Ekle
    </a>

    <table class="table table-dark table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Şehir Adı</th>
                <th>Bölge</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sehir in Model)
            {
                <tr>
                    <td>@sehir.Ad</td>
                    <td>@sehir.Bolge</td>
                    <td>
                        <a href="/Sehir/Guncelle/@sehir.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                        <a href="/Sehir/Sil/@sehir.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
